{
  "name": "claude-config-vscode",
  "displayName": "Claude Config", 
  "description": "Manage Claude API configurations with beautiful UI",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-config.openManager",
        "title": "Open",
        "category": "Claude Config",
        "icon": "$(gear)"
      },
      {
        "command": "claude-config.quickSwitch",
        "title": "Switch",
        "category": "Claude Config",
        "icon": "$(check)"
      },
      {
        "command": "claude-config.addProfile",
        "title": "Add New Profile",
        "category": "Claude Config",
        "icon": "$(add)"
      },
      {
        "command": "claude-config.refreshStatus",
        "title": "Refresh Status",
        "category": "Claude Config",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-config",
          "title": "Claude Config",
          "icon": "$(gear)"
        }
      ]
    },
    "views": {
      "claude-config": [
        {
          "id": "claude-config-profiles",
          "name": "Profiles",
          "when": "true"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "claude-config.openManager",
          "when": "true"
        },
        {
          "command": "claude-config.quickSwitch",
          "when": "true"
        },
        {
          "command": "claude-config.addProfile",
          "when": "true"
        },
        {
          "command": "claude-config.refreshStatus",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "claude-config.addProfile",
          "when": "view == claude-config-profiles",
          "group": "navigation"
        },
        {
          "command": "claude-config.refreshStatus",
          "when": "view == claude-config-profiles", 
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-config.quickSwitch",
          "when": "view == claude-config-profiles && viewItem == profile",
          "group": "inline"
        },
        {
          "command": "claude-config.openManager",
          "when": "view == claude-config-profiles && viewItem == profile",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TravisZS/claude-config-Vscode"
  },
  "keywords": [
    "claude",
    "anthropic", 
    "configuration",
    "api-key",
    "profile",
    "config",
    "management"
  ],
  "author": "TravisZS",
  "license": "MIT",
  "publisher": "TravisZS"
}