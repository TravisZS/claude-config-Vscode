{
  "name": "claude-config",
  "displayName": "Claude Config", 
  "description": "Manage Claude API configurations with beautiful UI",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-config.openManager",
        "title": "Open Configuration Manager",
        "category": "Claude Config"
      },
      {
        "command": "claude-config.quickSwitch",
        "title": "Quick Switch Profile",
        "category": "Claude Config"
      },
      {
        "command": "claude-config.addProfile",
        "title": "Add New Profile",
        "category": "Claude Config"
      },
      {
        "command": "claude-config.refreshStatus",
        "title": "Refresh Status",
        "category": "Claude Config"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "claude-config.openManager",
          "when": "true"
        },
        {
          "command": "claude-config.quickSwitch",
          "when": "true"
        },
        {
          "command": "claude-config.addProfile",
          "when": "true"
        },
        {
          "command": "claude-config.refreshStatus",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/claude-config"
  },
  "keywords": [
    "claude",
    "anthropic", 
    "configuration",
    "api-key",
    "profile",
    "config",
    "management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "publisher": "your-publisher-name"
}